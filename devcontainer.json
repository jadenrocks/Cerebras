{
	"name": "Python 3",
	//"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers-extra/features/coverage-py:2": {}
	},
	"postCreateCommand": "pip install -r requirements.txt",
	"forwardPorts": [8501, 5000],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}
